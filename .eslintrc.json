{
	"env": {
		"shared-node-browser": true,
		"commonjs": true,
    "es6": true,
    "browser": true,
    "node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
	},
	"rules": {
		"no-console":"off",
		"indent": [
			"error",
			2
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		]
  },
  "globals": {
    "use": true
  }
}